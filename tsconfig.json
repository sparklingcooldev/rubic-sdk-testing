{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "./",
    "@core/*": ["./node_modules/rubic-sdk/dist/core/*"],
    "@common/*": ["./node_modules/rubic-sdk/dist/core/*"],
    "@features/*": ["./node_modules/rubic-sdk/dist/core/*"]
  },
  "include": [
    "src"
  ]
}
